<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_below="@+id/film_overview"
    android:layout_margin="@dimen/text_margin">

    <TextView
        style="@style/PreviewCardItem.SubTitle.Bold"
        android:text="@string/more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:lineSpacingExtra="@dimen/medium_padding"
        android:id="@+id/originalTitle"
        style="@style/PreviewCardItem.SubTitle"
        tools:text="Título original\n- 11 homens e um segredo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginBottom="@dimen/medium_padding"
        android:background="@color/grey_500"
        android:layout_width="match_parent"
        android:layout_height="0.4dp" />

    <TextView
        android:id="@+id/languages"
        android:lineSpacingExtra="@dimen/medium_padding"
        style="@style/PreviewCardItem.SubTitle"
        tools:text="Idioma\n- Português\n- Inglês"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginBottom="@dimen/medium_padding"
        android:background="@color/grey_500"
        android:layout_width="match_parent"
        android:layout_height="0.4dp" />

    <TextView
        android:id="@+id/genres"
        android:lineSpacingExtra="@dimen/medium_padding"
        style="@style/PreviewCardItem.SubTitle"
        tools:text="Gênero\n- Fantasia\n- Romance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginBottom="@dimen/medium_padding"
        android:background="@color/grey_500"
        android:layout_width="match_parent"
        android:layout_height="0.4dp" />

    <TextView
        android:id="@+id/popularity"
        android:lineSpacingExtra="@dimen/medium_padding"
        style="@style/PreviewCardItem.SubTitle"
        tools:text="Popularidade\n- 125.98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginBottom="@dimen/medium_padding"
        android:background="@color/grey_500"
        android:layout_width="match_parent"
        android:layout_height="0.4dp" />

    <TextView
        android:id="@+id/production"
        android:lineSpacingExtra="@dimen/medium_padding"
        style="@style/PreviewCardItem.SubTitle"
        tools:text="Produção\n- Wlat Disnaey Pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
